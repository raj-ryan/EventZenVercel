{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "package.json", "use": "@vercel/node" },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/ping", "dest": "/api/ping.js" },
    { "src": "/api/events", "dest": "/api/events.js" },
    { "src": "/api/venues", "dest": "/api/venues.js" },
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/dist/public/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 